<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.edu.cicese.caremetoo" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mx.edu.cicese.caremetoo.VoiceLogger"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="mx.edu.cicese.caremetoo.VoicePlayer"
            android:label="@string/title_activity_voice_player" >
        </activity>
        <activity
            android:name="mx.edu.cicese.caremetoo.StatusActivity"
            android:label="@string/title_activity_status" >


        </activity>
        <activity
            android:name="mx.edu.cicese.caremetoo.SyncActivity"
            android:label="@string/title_activity_sync" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
